<main class="container">
  <%= link_to sanitize("&larr; Back to crawlers"), crawlers_path %>
  <div class="header">
    <h1>
      <%= @crawler.keywords %>
    </h1>
  </div>

  <h2>Drivers</h2>
  <ul>
    <% @crawler.drivers.each do |driver| %>
      <li><%= driver.name %></li>
    <% end %>
  </ul>
</main>